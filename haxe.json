{
  "build" : {
    "-D"    : [
      "no-deprecation-warnings"
    ],
    "-cp"   : ["src/main/haxe"],
    "-L"    : ["tink_core","stx_pico","stx_nano","stx_fn","stx_fp","stx_log","stx_pkg","stx_assert","stx_parse","stx_ds","fletcher","stx_om"],
    "-resource" : [
      "asset/test.pml@test",
      "asset/test2@testw",
      "asset/test-2.pml@test2",
      "asset/haxe_cpl.pml@haxe_cpl",
      "asset/haxe_cpl_order.pml@haxe_cpl_order",
      "asset/v2.pml@v2"
    ],
    "unit"  : {
      "--macro" : [
        "include('eu.ohmrum.pml',true)",      
        "include('stx.assert',true)",
        "include('stx.parse.pml',true)",
        "include('stx.g',true)"
      ],
      "interp" : {
        "--interp"  : true
      }
    },
    "main"  : {
      "-main"     : "Main",
      "interp"  : {
        "--interp"  : true
      }
    },
    "test" : {
      "-cp"   : "src/test/haxe",
      "-L"    : "stx_test", 
      "-main" : "eu.ohmrun.pml.Test",
      "interp" : {
        "-D" : [
          "debug",
          "stx.parse.switches.debug=false",
          "stx.stream.switches.debug=true"
        ],
        "--interp" : true
      },
      "node" : {
        "--js" : "build/test/node/main.js"
      }
    }
  }
}